<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myPrimaryColor</item>
        <item name="colorPrimaryDark">@color/myPrimaryDarkColor</item>
        <item name="colorAccent">@color/myAccentColor</item>
        <item name="android:textColorPrimary">@color/myTextPrimaryColor</item>
        <item name="android:navigationBarColor">@color/myNavigationColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="nav_item_color_selector">@color/text_color_selector</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="nav_drawer_header">@drawable/header_image</item>
        <item name="android:windowBackground">@color/myInverseColor</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="nav_drawer_bg_color">@color/myInverseColor</item>
        <item name="myAccentColor">@color/myAccentColor</item>
        <item name="my_logo">@drawable/logo_hct</item>
        <item name="mynewColor">@color/myPrimaryColor</item>
        <item name="navitextcolor">#ffffff</item>
        <item name="circle_anim_color">#ff000000</item>
        <item name="item_color_selector">@color/color_selector</item>
        <item name="text_mail">@color/back_text_mail</item>
    </style>
    <style name="AppThemeHCT" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myPrimaryColorHCT</item>
        <item name="colorPrimaryDark">@color/myPrimaryDarkColorHCT</item>
        <item name="colorAccent">@color/myAccentColorHCT</item>
        <item name="android:textColorPrimary">@color/myTextPrimaryColor</item>
        <item name="android:navigationBarColor">@color/myNavigationColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="nav_item_color_selector">@color/text_color_selector_hct</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="nav_drawer_header">@drawable/header_image_hct</item>
        <item name="android:windowBackground">@color/myInverseColor</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="nav_drawer_bg_color">@color/myInverseColor</item>
        <item name="myAccentColor">@color/myAccentColorHCT</item>
        <item name="my_logo">@drawable/logo_hct_blue</item>
        <item name="mynewColor">@color/myPrimaryColorHCT</item>
        <item name="navitextcolor">#ffffff</item>
        <item name="circle_anim_color">#ff000000</item>
        <item name="item_color_selector">@color/color_selector</item>
        <item name="text_mail">@color/back_text_mail_hct</item>
    </style>
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myAccentColor</item>
        <item name="colorPrimaryDark">@color/myPrimaryDarkColor</item>
        <item name="colorAccent">@color/myAccentColor</item>
        <item name="android:textColorPrimary">@color/myTextPrimaryColorLight</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorPrimaryInverse">@color/myInverseColorLight</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/myAccentColorLight</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="nav_item_color_selector">@color/text_color_selector_light</item>
        <item name="nav_drawer_bg_color">#fff</item>
        <item name="nav_drawer_header">@drawable/header_image_light</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/myWindowBackground</item>
        <item name="my_logo">@drawable/logo_hct</item>
        <item name="mynewColor">@color/myAccentColor</item>
        <item name="navitextcolor">#000000</item>
        <item name="circle_anim_color">#ffffffff</item>
        <item name="item_color_selector">@color/color_selector_light</item>
        <item name="text_mail">@color/back_text_mail</item>

    </style>
    <style name="AppThemeSamsungLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myAccentColorSamsungLight</item>
        <item name="colorPrimaryDark">@color/myPrimaryDarkColorSamsungLight</item>
        <item name="colorAccent">@color/myAccentColorSamsungLight</item>
        <item name="android:textColorPrimary">@color/myTextPrimaryColorLight</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorPrimaryInverse">@color/myInverseColorLight</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/myAccentColorSamsungLight</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="nav_item_color_selector">@color/text_color_selector_samsung_light</item>
        <item name="nav_drawer_bg_color">#fff</item>
        <item name="nav_drawer_header">@drawable/header_image_samsung_light</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/myWindowBackground</item>
        <item name="my_logo">@drawable/logo_hct_tw</item>
        <item name="mynewColor">@color/myAccentColorSamsungLight</item>
        <item name="navitextcolor">#000000</item>
        <item name="circle_anim_color">#ffffffff</item>
        <item name="item_color_selector">@color/color_selector_light</item>
        <item name="text_mail">@color/back_text_mail_samsung</item>
    </style>
    <style name="AppThemeMaterialDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myPrimaryColorMaterialDark</item>
        <item name="colorPrimaryDark">@color/myPrimaryDarkColorMaterialDark</item>
        <item name="colorAccent">@color/myAccentColorMaterialDark</item>
        <item name="android:textColorPrimary">@color/myTextPrimaryColor</item>
        <item name="android:navigationBarColor">@color/myNavigationColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="nav_item_color_selector">@color/text_color_selector_hct</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="nav_drawer_header">@drawable/header_image_material</item>
        <item name="android:windowBackground">@color/myInverseColorMaterialDark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="nav_drawer_bg_color">@color/myInverseColorMaterialDark</item>
        <item name="myAccentColor">@color/myAccentColorMaterialDark</item>
        <item name="my_logo">@drawable/logo_hct_material</item>
        <item name="mynewColor">@color/myPrimaryColorMaterialDark</item>
        <item name="navitextcolor">#ffffff</item>
        <item name="circle_anim_color">#ff000000</item>
        <item name="item_color_selector">@color/color_selector</item>
        <item name="text_mail">@color/back_text_mail_hct</item>
    </style>
    <style name="Theme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/windowBgTransparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="nav_drawer_bg_color">#00000000</item>
        <item name="colorAccent">@color/myPrimaryDarkColor</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>
    <!-- info header -->
    <style name="infoHeader">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">?attr/nav_drawer_bg_color</item>
    </style>
</resources>