<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout="@layout/my_logo"
        android:key="logo_hct">
    </PreferenceScreen>
    <PreferenceCategory android:layout="@layout/preferences_category" android:title="Links Externos" >
        <PreferenceScreen
            android:icon="@drawable/hctnuevoforo"
            android:title="HCTROM Web Oficial"
            android:summary="Visite nuestra página oficial">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://hctrom.nuevoforo.es/" />
        </PreferenceScreen>
        <PreferenceScreen
            android:icon="@drawable/htcmania"
            android:title="Hilo Oficial htcmania.com"
            android:summary="Visite nuestro hilo oficial en Htcmania">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.htcmania.com/showthread.php?t=1185009" />
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory android:layout="@layout/preferences_category" android:title="HCTeam S5" >
        <PreferenceScreen android:layout="@layout/acercade_hcteam_s5"  android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </PreferenceCategory>
    <PreferenceCategory android:layout="@layout/preferences_category" android:title="Creditos" >
        <PreferenceScreen android:layout="@layout/acercade_creditos_hct"  android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </PreferenceCategory>
    <PreferenceCategory android:layout="@layout/preferences_category" android:title="Donativo" />
    <PreferenceScreen
        android:icon="@drawable/ic_paypal"
        android:title="PayPal.Me"
        android:summary="Mantener este proyecto arriba. Nos ayudas por mínima que sea la donación. Gracias por valorar nuestro trabajo.">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://www.paypal.com/cgi-bin/webscr?cmd=_donations&amp;business=hctrom%2esoporte%40gmail%2ecom&amp;lc=ES&amp;item_name=HCTRom&amp;currency_code=EUR&amp;bn=PP%2dDonationsBF%3abtn_donateCC_LG%2egif%3aNonHosted" />
    </PreferenceScreen>
    <PreferenceCategory android:layout="@layout/preferences_category" android:title="VideoTutorial" >
        <PreferenceScreen
            android:title="Videotutorial"
            android:icon="@drawable/ic_videoder"
            android:key="videotutorial_hct"
            android:summary="Echa un vistazo a nuestro VideoTutorial de la HCTRom (Es necesaria conexión a internet)"
            android:widgetLayout="@layout/round_more_icon" >
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>